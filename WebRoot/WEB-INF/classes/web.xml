<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	
	
	<!-- 加载Spring服务 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/applicationContext-wi.xml
		</param-value>
	</context-param>
	<!-- 监听Spring文件 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!--处理请求编码格式 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>com.huawei.uns.common.util.filter.CharacterFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
	   <filter-name>redirectFilter</filter-name>
	   <filter-class>com.huawei.uns.common.util.filter.RedirectFilter</filter-class>
	
	   <init-param>
	       <param-name>logoutpage</param-name>
	       <param-value>/pages/logout.do</param-value>
	   </init-param>
	   <init-param>
	       <param-name>redirectpage</param-name>
	       <param-value>/homepage.do</param-value>
	   </init-param>
	   <init-param>
	       <param-name>exceptionpage</param-name>
	       <param-value>changepassword.do</param-value>
	   </init-param>
	</filter>

	<filter-mapping>
	   <filter-name>redirectFilter</filter-name>
	   <url-pattern>/pages/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>PortFilter</filter-name>
		<filter-class>com.huawei.uns.common.util.filter.PortFilter</filter-class>
		<init-param>
			<param-name>exceptinterface</param-name>
			<param-value>monitorStatus</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>PortFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>FileFilter</filter-name>
		<filter-class>com.huawei.uns.common.util.filter.FileFilter</filter-class>
		<init-param>
			<param-name>exclude</param-name>
			<param-value>onlinehelp:explicit:mexplicit</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>FileFilter</filter-name>
		<url-pattern>/encrypter/*</url-pattern>
		<url-pattern>*.ftl</url-pattern>
		<url-pattern>*.db</url-pattern>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:dispatcher.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Freemarker</servlet-name>
		<servlet-class>freemarker.ext.servlet.FreemarkerServlet</servlet-class>
		<init-param>
			<param-name>TemplatePath</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>template_update_delay</param-name>
			<param-value>3600</param-value> <!-- 0 值仅用于开发环境，生产环境请设置为3600或者更大。 -->
		</init-param>
		<init-param>
			<param-name>DefaultEncoding</param-name> <!-- 解决中文编码问题 -->
			<param-value>utf-8</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>


	
	<!-- Restful请求接入servlet -->
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>		
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>LauncherIcaServlet</servlet-name>
		<servlet-class>com.huawei.uns.web.servlet.LauncherIcaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LauncherIcaServlet</servlet-name>
		<url-pattern>/launch.ica</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>clientdownload</servlet-name>	
		<servlet-class>com.huawei.common.servlet.ClientDownloadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>clientdownload</servlet-name>
		<url-pattern>/clientdownload</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
 
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>TokenLoginServlet</servlet-name>
    <servlet-class>com.huawei.uns.web.servlet.TokenLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TokenLoginServlet</servlet-name>
    <url-pattern>/servlet/TokenLoginServlet</url-pattern>
  </servlet-mapping>
	
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>pages/init.do</welcome-file>
  </welcome-file-list>
  
  <error-page>  
    <error-code>404</error-code>  
    <location>/webui/common/error/error404.jsp</location>  
  </error-page> 
  
  <error-page>  
    <error-code>400</error-code>  
    <location>/webui/common/error/error.jsp</location>  
  </error-page>
  
	<listener><listener-class>com.huawei.uns.common.init.UnsInitData</listener-class></listener>
  	<login-config>  
	    <!-- Authorization setting for SSL -->  
	    <auth-method>CLIENT-CERT</auth-method>  
	    <realm-name>Client Cert Users-only Area</realm-name>  
	</login-config>
	
	<security-constraint>
        <web-resource-collection>
                <web-resource-name>fortune</web-resource-name>
                <url-pattern>/pages/*</url-pattern>
                <http-method>PUT</http-method>
                <http-method>DELETE</http-method>
                <http-method>HEAD</http-method>
                <http-method>OPTIONS</http-method>
                <http-method>TRACE</http-method>
        </web-resource-collection>
        <auth-constraint></auth-constraint>
	</security-constraint>
	
	<security-constraint>  
	    <!-- Authorization setting for SSL -->  
	    <web-resource-collection >  
	        <web-resource-name >SSL</web-resource-name>  
	        <url-pattern>/pages/*</url-pattern>  
	        <url-pattern>/uns/*</url-pattern>  
	    </web-resource-collection>  
	    <user-data-constraint>  
	        <transport-guarantee>CONFIDENTIAL</transport-guarantee>  
	    </user-data-constraint>  
	</security-constraint>
  
</web-app>
